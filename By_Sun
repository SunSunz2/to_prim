  <button id="noButton" onclick="moveNoButton()">No</button>
  <button id="bigYesButton" onclick="showModal()">YES!!! ðŸ’˜</button>

  <div id="signatureModal">
    <div id="modalContent">
      <h2>Sign below to make it official.</h2>
      <input type="text" id="signatureInput" placeholder="Your name here ðŸ’—">
      <br>
      <button onclick="submitSignature()">Submit</button>
    </div>
  </div>

  <script>
    let noClicks = 0;

    function moveNoButton() {
      const btn = document.getElementById('noButton');
      const maxX = window.innerWidth - btn.offsetWidth;
      const maxY = window.innerHeight - btn.offsetHeight;
      const randX = Math.random() * maxX;
      const randY = Math.random() * maxY;
      btn.style.left = `${randX}px`;
      btn.style.top = `${randY}px`;
      btn.style.right = 'auto';
      btn.style.bottom = 'auto';

      noClicks++;
      if (noClicks >= 5) {
        btn.style.display = 'none';
        document.getElementById('bigYesButton').style.display = 'block';
      }
    }

    function showModal() {
      document.getElementById('signatureModal').classList.add('active');
    }

    function submitSignature() {
      const name = document.getElementById('signatureInput').value.trim();
      if (name) {
        document.getElementById('modalContent').innerHTML =
          `<h2>Thank you, ${name} ðŸ’–</h2><p>You just made someone very happy ðŸ˜Š</p>`;
      } else {
        alert("Please enter your name to sign ðŸ’Œ");
      }
    }
  </script>
